                                <%= image_tag "westinjc.jpg", alt: "Westin Jersey City Newport", class: "media-object" %>
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading">Westin Jersey City Newport</h4>
                                <p class="list-group-item-text">Jersey City, NJ</p>
                                <p class="list-group-item-text">06/08/2015 to 06/11/2015</p>
