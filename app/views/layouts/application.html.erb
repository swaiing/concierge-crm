                <div class="container cust-fixed">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Text Chat to (555) 555-5555</h3>
                    </div>

<!-- DYNAMIC CHAT CONTENT -->

    <%= yield %>

<!-- /DYNAMIC CHAT CONTENT -->

              </div> <!-- /panel -->

            </div> <!-- /container -->

            </div>
            <!-- /Chat tab -->

        </div>
