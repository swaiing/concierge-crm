                                    <div class="list-group-item">
                                        5/14/15 - Send gift for member's birthday in June
                                    </div>
                                    <div class="list-group-item">
                                        5/06/15 - Member enjoyed room upgrade at Le Meridien San Francisco
                                    </div>
                                    <div class="list-group-item">
                                        4/23/15 - Member reported bad experience at Sheraton Brooklyn
                                    </div>
                                </div>
                            </div> <!--/panel-body -->
                        </div>
                    </div> <!--/col-md-6 -->

                </div> <!-- /row -->
            </div> <!-- /container-fluid -->

            </div> <!-- /Profile tab -->

            <!-- Stays tab -->
            <div role="tabpanel" class="tab-pane fade in" id="stays">

                <div class="container cust-fixed">

                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Upcoming Stays</h3>
                    </div>
                    <div class="panel-body">

                        <ul class="media-list">
                            <li class="media">
                            <div class="media-left">
                                <%= image_tag "whoboken.jpg", alt: "W Hoboken", class: "media-object" %>
                            </div>
                            <div class="media-body">
                                <h4 class="media-heading">W Hoboken</h4>
                                <p class="list-group-item-text">Hoboken, NJ</p>
                                <p class="list-group-item-text">08/21/2015 to 08/23/2015</p>
                                <p class="list-group-item-text">
                                <a href="#" class="stay-action-link">View Details</a> | 
                                <a href="#" class="stay-action-link">Change</a> | 
                                <a href="#" class="stay-action-link">Cancel</a> | 
                                <a href="#" class="stay-action-link">Contact Hotel</a> | 
                                <a href="#" class="stay-action-link">Send Confirmation</a>
                                </p>
                            </div>
                            </li>
                        </ul> <!-- /media-list -->

                    </div> <!-- /panel-body -->
                </div> <!-- /panel -->

                <div class="panel panel-default">
                    <div class="panel-heading">
