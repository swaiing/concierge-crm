          </div>

          <ul id="main-tabs" class="nav nav-tabs">
              <li role="presentation">
              <a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Profile</a>
              </li>
              <li role="presentation">
              <a href="#stays" aria-controls="stays" role="tab" data-toggle="tab">Stays</a>
              </li>
              <li role="presentation" class="active">
              <a href="#chat" aria-controls="chat" role="tab" data-toggle="tab">Text Chat <span class="badge">new</span></a>
              </li>
          </ul>

        <!-- Tab content-->
        <div class="tab-content">
            <!-- Profile tab -->
            <div role="tabpanel" class="tab-pane fade in" id="profile">

                <div class="container-fluid">
                    <div class="row">

                        <div class="col-md-6">
                            <div class="panel panel-default">
                                <div class="panel-heading">
